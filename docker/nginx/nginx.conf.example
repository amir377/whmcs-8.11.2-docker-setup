user www-data;
worker_processes auto;
pid /run/nginx.pid;

# Events section (required by Nginx)
events {
    worker_connections 8192;
    multi_accept on;
}

http {
    ##
    # Basic Settings
    ##
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # SSL Settings (Optional)
    ##
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3; # Dropping SSLv3, ref: POODLE
    ssl_prefer_server_ciphers on;

    ##
    # Logging Settings
    ##
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    ##
    # Gzip Settings
    ##
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    ##
    # Virtual Host Configs
    ##

    # Define your upstream app servers (Docker containers)
    upstream app_servers {
        # Docker container names are used, Docker resolves them via internal DNS
        server whmcs-8-11-2:80;
    }

    # Define your main server block for Nginx inside the container
    server {
        listen 30190;  # Nginx listens on port 20190 (can be changed as needed)

        server_name localhost;

        # Default location block
        location / {
            proxy_pass http://app_servers;  # Forward traffic to app_servers (Docker containers)
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
